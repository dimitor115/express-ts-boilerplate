{
  "name": "native-flow-express-ts-boilertemplate",
  "version": "1.0.0",
  "description": "Boilertemplate of express + typescript REST backend app",
  "author": "Maciej KopeÄ‡ (dimitor115)",
  "license": "MIT",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --ignore src/api/_auto/routes.ts --watch src -e ts --exec yarn dev-start",
    "dev-start": "tsoa routes && ts-node src/server.ts",
    "build-ts": "tsoa routes && tsoa swagger && tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:fix": "tslint -c tslint.json --fix -p tsconfig.json",
    "start": "node dist/server.js",
    "tsoa:swagger": "tsoa swagger",
    "tsoa:routes": "tsoa routes"
  },
  "engines": {
    "npm": "6.x.x"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/mongoose": "^5.5.12",
    "@types/node": "^12.0.12",
    "@types/shelljs": "^0.8.0",
    "nodemon": "^1.19.1",
    "shelljs": "^0.8.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.8",
    "reflect-metadata": "^0.1.13",
    "tsoa": "^2.4.11",
    "winston": "^3.2.1"
  }
}
